        <textarea class="form-control" name="q3" rows="5" id="q3"></textarea>
        </div>
    </div>

    <div class="form-group center-block text-center">
        <div>
            <label class="control-label">Question 4: <%= data.survey.questions[3].question %></label>
        </div>
        <div>
        <textarea class="form-control" name="q4" rows="5" id="q4"></textarea>
        </div>
    </div>

    <div class="form-group center-block text-center">
        <div>
            <label class="control-label">Question 5: <%= data.survey.questions[4].question %></label>
        </div>
        <div>
